<%- include("layout", { body: `
  <h2>Editar tarea</h2>

  <form method="POST" action="/editar/${tarea.id}">
    <label>Título:</label><br>
    <input type="text" name="titulo" value="${tarea.titulo}" required><br><br>

    <label>Descripción:</label><br>
    <textarea name="descripcion" required>${tarea.descripcion}</textarea><br><br>

    <button type="submit">Actualizar</button>
  </form>
` }) %>